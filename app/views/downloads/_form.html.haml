= form_for @download do |f|
  - if @download.errors.any?
    #error_explanation
      %h2= "#{pluralize(@download.errors.count, "error")} prohibited this download from being saved:"
      %ul
        - @download.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :release
    = f.text_field :release
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :cost
    = f.text_field :cost
  .actions
    = f.submit 'Save'
