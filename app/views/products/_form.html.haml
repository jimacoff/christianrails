= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :author
    = f.text_field :author
  .field
    = f.label :short_desc
    = f.text_field :short_desc
  .field
    = f.label :long_desc
    = f.text_area :long_desc
  .field
    = f.label :price
    = f.text_field :price, value: ( number_with_precision( f.object.price, precision: 2) || 0)
  .field
    = f.label :rank
    = f.number_field :rank
  .field
    = f.label :image
    = f.text_field :image
  .field
    = f.label :small_image
    = f.text_field :small_image
    
  .actions
    = f.submit 'Save', class: 'store-button'
