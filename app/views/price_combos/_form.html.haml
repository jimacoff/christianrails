= form_for @price_combo do |f|
  - if @price_combo.errors.any?
    #error_explanation
      %h2= "#{pluralize(@price_combo.errors.count, "error")} prohibited this price_combo from being saved:"
      %ul
        - @price_combo.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :discount
    = f.text_field :discount, value: ( number_with_precision( f.object.discount, precision: 2) || 0 )
  .actions
    = f.submit 'Save', class: 'store-button'
