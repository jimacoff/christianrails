%div{style: "text-align: left;"}
  #category-holder
    %span#posted-in.radical-diminutive.embolden Posted in:

    %span= link_to locals[:post][:category], butler_category_path + "?name=" + locals[:post][:category], class: "category-link"

  #tags-holder
    %span#tags-tag.radical-diminutive.embolden Tags:

    - locals[:post][:tags].each do |tag|
      %span= link_to tag, butler_tag_path + "?name=" + tag, class: "tag-link"

  %br
