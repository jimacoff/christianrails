%h1 Listing releases

%table
  %thead
    %tr
      %th Product
      %th Type
      %th Release date
      %th Size
      %th Version
      %th
      %th
      %th

  %tbody
    - @releases.each do |release|
      %tr
        %td= release.product
        %td= release.type
        %td= release.release_date
        %td= release.size
        %td= release.version
        %td= link_to 'Show', release
        %td= link_to 'Edit', edit_release_path(release)
        %td= link_to 'Destroy', release, :method => :delete, :data => { :confirm => 'Are you sure?' }

