#statspanel.zero-margin.center
  - if current_user && current_user.player
    %span= "Score: #{current_player.total_score(@story.id)}"

#imagepanel.zero-margin.center
  = image_tag("#{@story.pic_name}/title.png", class: "df-image")

.center

  #df-play-or-signup-button
    - if @story.name == "Diamond Find"
      = button_to "Play #{@story.name} now!", diamondfind_play_path, class: "bright-button", method: :get
    - elsif @story.name == "The Calico Brief"
      = button_to "Play #{@story.name} now!", thecalicobrief_play_path, class: "bright-button", method: :get
    - else
      = button_to "Play #{@story.name} now!", play_woods_story_path(@story), class: "bright-button", method: :get

    - if !current_user
      %p
        = link_to 'Create an account for free', new_user_registration_path, class: 'megapink'
        to save your progress.

  #df-col1
    #highscore-table.zero-margin.center
      %h3.center High Scores
      %table.zero-margin.center
        - @highscores.each do |h|
          - unless h[1] == 0
            %tr
              %td
                %strong= link_to h[0], woods_player_path(h[2]), class: "blackscore"
              %td= h[1]

  #df-col2
    #storyinfopanel.zero-margin.center
      %h3.center Story Stats
      %table.zero-margin.center
        %tr
          %td= @story.total_plays
          %td= "#{@story.left_count} / #{@story.right_count}"
        %tr
          %th Total plays
          %th Lefts / Rights


  - if current_user && current_user.player && current_player.owns_story?(@story)
    %br
    = button_to "Manage this story", manage_woods_story_path(@story), class: "minory-button", method: :get
