#statspanel.zero-margin.center
  - if current_user && current_user.player
    %span= "Score: #{current_player.total_score}"

#imagepanel.zero-margin.center
  = image_tag("#{@story.pic_name}/title.png", class: "rounded")

#storyinfopanel.zero-margin.center
  %p= "Total plays: #{@story.total_plays}"

.center
  - if current_user
    = button_to "Play #{@story.name} now!", play_woods_story_path(@story), class: "binary-button", method: :get
    - if current_user.player && current_player.owns_story?(@story)
      %br
      = button_to "Manage this story", manage_woods_story_path(@story), class: "binary-button", method: :get
  - else
    %h3= "Play #{@story.name} now!"
    = link_to 'Sign in', user_session_path
    or
    = link_to 'Create an account for free!', new_user_registration_path
