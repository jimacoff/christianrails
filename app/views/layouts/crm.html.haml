!!! 5
%html
  %head
    %title DeWolf Personal Assistant
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true

    = javascript_include_tag "application", "data-turbolinks-track" => true
    = javascript_include_tag "woods/woods", "data-turbolinks-track" => true
    = csrf_meta_tags

    %meta{ property: "og:image", content: "http://www.christiandewolf.com/diamondfind.png" }
    %meta{ property: "og:title", content: "DeWolf Personal Assistant" }
    %meta{ property: "og:url",   content: "https://www.christiandewolf.com/crm" }
    %meta{ property: "og:description", content: "Store your contacts." }

    %link{ href: 'https://fonts.googleapis.com/css?family=Artifika', rel: 'stylesheet', type: 'text/css' }

  %body.background

    = render "woods/header"

    #woods-wrapper
      - if notice
        %p.alert.alert-notice
          = notice
      - if alert
        %p.alert.alert-danger
          = alert

      = yield

      = render "woods/footer"

    %h5.right= "v #{app_version}"
